# 1️⃣ Create project folder and move inside
mkdir myproject
cd myproject

# 2️⃣ Create the two files
echo '[
  {
    "expiresAt": "2025-10-10 11:59 PM",
    "allowOffline": true,
    "channelLink": "https://t.me/yourchannel",
    "applyToAllDevices": true
  }
]' > users.json

echo '# Ignore node & environment files
node_modules/
.env
*.log
.DS_Store
Thumbs.db
private/
secrets/' > .gitignore

# 3️⃣ Initialize git
git init
git add .
git commit -m "Initial commit: Global config for all devices"

# 4️⃣ Create a new PRIVATE repo on GitHub (via web)
# Example: https://github.com/YOUR_USERNAME/myproject

# 5️⃣ Connect local repo with GitHub and push
git branch -M main
git remote add origin https://github.com/YOUR_USERNAME/myproject.git
git push -u origin main
